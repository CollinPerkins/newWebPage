extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign Up

        // register form
        form(method='POST' action='/registerUser')
          div.form-group
            label(for='firstName') Name:
            input#firstName.form-control(type='text', placeholder='First' name='firstName')
          div.form-group
            label(for='lastName') Name:
            input#lastName.form-control(type='text', placeholder='Last' name='lastName')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
          button.btn.btn-primary(type='submit') Sign up
